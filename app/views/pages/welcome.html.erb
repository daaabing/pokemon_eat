<h1>LogIn</h1>


<%= form_with url: "/login", method: :post do |form| %>
    <%= form.label :email, "Email:" %>
    <%= form.email_field :email %>
    <%= form.label :password, "Password:" %>
    <%= form.password_field :password %>
    <%= form.submit "LogIn" %>
<% end %>
<% if flash.now[:login_error] != nil %>
    <ul>
        <% flash.now[:login_error].each do |error| %>
            <li> <%= error %></li>
        <% end %>
    </ul>
<% end %>




<h1>SignUp</h1>
<%= form_with url: "/signup", method: :post do |form| %>
    <%= form.label :email, "Email:" %>
    <%= form.email_field :email %>
    <%= form.label :password, "Password:" %>
    <%= form.password_field :password %>
    <%= form.label :re_password, "Re-Password:" %>
    <%= form.password_field :re_password %>
    <%= form.submit "SignUp" %>
<% end %>
<% if flash[:signup_error] != nil %>
    <ul>
        <% flash[:signup_error].each do |error| %>
            <li> <%= error %></li>
        <% end %>
    </ul>
<% end %>

