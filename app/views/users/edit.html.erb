<%= form_with(url: "/edit_profile", method: :get, local: true) do |form| %>
    <%= form.label :first_name, "First Name:", :class=>"col-lg-12 col-form-label col-form-label-lg padding" %>
    <%= form.text_field :first_name, :class=>"form-control" %>

    <%= form.label :last_name, "Last Name:", :class=>"col-lg-12 col-form-label col-form-label-lg padding" %>
    <%= form.text_field :last_name, :class=>"form-control " %>

    <%= form.label :nick_name, "Nick Name:", :class=>"col-lg-12 col-form-label col-form-label-lg padding" %>
    <%= form.text_field :nick_name, :class=>"form-control " %>

    <%= form.label :gender, "Gender:", :class=>"col-lg-12 col-form-label col-form-label-lg padding" %>
    <%= form.select :gender, ["Male", "Female", "Other"], {}, :class=>"form-control" %>

    <%= form.label :age, "Age:", :class=>"col-lg-12 col-form-label col-form-label-lg padding" %>
    <%= form.text_field :age, :class=>"form-control" %>

    <%= form.label :food_preference, "Food Preference:", :class=>"col-lg-12 col-form-label col-form-label-lg padding" %>
    <%= form.text_field :food_preference, :class=>"form-control" %>

    <%= form.label :location, "Location:", :class=>"col-lg-12 col-form-label col-form-label-lg padding" %>
    <%= form.text_field :location, :class=>"form-control insert-location" %>

    <%= form.submit "Change my profile" , :class=>"btn btn-primary" %>
    
<% end %>