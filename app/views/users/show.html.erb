<div style="margin:0px; padding:0px; width:100%;">
  <div class="row" style="margin:0px; width:100%; height:600px; overflow:hidden; background-image: url('/assets/user-background-3.jpeg'); background-size:cover;">
  </div>
  
</div>

<div class="container">
  <div class="row">
    <div class="col-4" style="top:-70px;">
      <img src=<%=@avatar_url%> style="width:300px;">
    </div>
    <div class="col-8">
      <h2><%= @user.nick_name %><h2>
      <p>BIO bullbasaur</p>
    </div>
  </div>
</div>



<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="bs-example">
        <ul class="nav nav-tabs justify-content-center">
            <li class="nav-item">
                <a href="#review" class="nav-link active" data-toggle="tab">My Reviews</a>
            </li>
            <li class="nav-item">
                <a href="#restaurants" class="nav-link" data-toggle="tab">Starred Restaurants</a>
            </li>
            <li class="nav-item">
                <a href="#events" class="nav-link" data-toggle="tab">Booked Events</a>
            </li>
            <li class="nav-item">
                <a href="#following" class="nav-link" data-toggle="tab">Following</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade show active" id="review">
              <% @reviews.each do |r|%>
                <div class="row" style="margin-bottom:20px; margin-top:10px;">
                  <div class="col-2">
                    <img src=<%=@avatar_url%> style="width:100px; display:inline;">
                  </div>
                  <div class="col-10">
                    <h3><%= r[0]%></h3>
                    <h5><%= r[3] %></h5>
                    <p><%= r[2]%></p>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="tab-pane fade" id="restaurants">
                <h4 class="mt-2">
                  <% @liked_res.each do |l|%>
                    <div class="row" style="margin-bottom:30px;">
                      <div class="col-3" >
                        <img src=<%= l["image_url"]%> style="width:150px; height:100px; object-fit:cover; border-radius:5px;">
                      </div>
                      <div class="col-9">
                        <h3 class="card-title" style="margin:0px;"><%= l["name"]%></h3>
                        <p style="margin:0px; display:inline; font-size:18px; font-family:serif"> 
                          <%= l["location"]["address1"]%> | 
                        </p>
                        <p style="margin:0px; display:inline; font-size:18px; font-family:serif">
                          <%= l["display_phone"]%>
                        </p>
                        <div>
                          <a href=<%= "/business/" + l['id']%> class="btn btn-primary" style="margin-left:auto; color:white;">Visit</a>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </h4>
            </div>
            <div class="tab-pane fade" id="events">
                <h4 class="mt-2">
                  <% @booked_events.each do |b|%>
                    <p><%= b.event_id%></p>
                  <% end %>
                </h4>
            </div>
            <div class="tab-pane fade" id="following">
                <h4 class="mt-2">
                  <% @following.each do |f|%>
                    <p><%= f.friend_id%></p>
                  <% end %>
                </h4>
            </div>
        </div>
      </div>
    </div>

    <div class="col-4">
      <%= pie_chart @food_hash%>
    </div>
  </div>
</div>

