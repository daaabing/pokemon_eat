<div class="container">
  <div class="row" style="margin:0px; width:100%; height:300px; overflow:hidden; background-image: url('/assets/user-background-1.jpeg'); background-size:cover;border-color:white; border-width: 20px;">
  </div>
  <div class="row">
    <div class="col-4" style="top:-40px;">
      <%= image_tag("bullbasaur.png", width:'300px') %>
    </div>
    <div class="col-8">
      <h2><%= @user.nick_name %><h2>
      <p>BIO bullbasaur</p>
    </div>
  </div>
</div>


<div class="container">
  <div class="bs-example">
    <ul class="nav nav-tabs justify-content-center">
        <li class="nav-item">
            <a href="#preference" class="nav-link active" data-toggle="tab">Food Preference</a>
        </li>
        <li class="nav-item">
            <a href="#review" class="nav-link" data-toggle="tab">My Reviews</a>
        </li>
        <li class="nav-item">
            <a href="#restaurants" class="nav-link" data-toggle="tab">Starred Restaurants</a>
        </li>
        <li class="nav-item">
            <a href="#events" class="nav-link" data-toggle="tab">Booked Events</a>
        </li>
        <li class="nav-item">
            <a href="#following" class="nav-link" data-toggle="tab">Following</a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade show active" id="preference">
            <h4 class="mt-2">
              <% @food_list.each do |f|%>
                <p><%= f[0]%>   <%= f[1]%></p>
              <% end %>
            </h4>
        </div>
        <div class="tab-pane fade" id="review">
            <h4 class="mt-2">
              <% @reviews.each do |r|%>
                <p><%= r.review%></p>
              <% end %>
            </h4>
        </div>
        <div class="tab-pane fade" id="restaurants">
            <h4 class="mt-2">
              <% @liked_res.each do |l|%>
                <div class="row" style="margin-bottom:30px;">
                  <div class="col-1" style="width:30px;"><%= image_tag("bullbasaur.png", width:'90px;') %></div>
                  <div class="col-11">
                    <h5 class="card-title">Special title treatment</h5>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <div style="display:flex;">
                      <div style="width:20px;"></div>
                      <a href="#" class="btn btn-primary" style="justify-content:flex-end;">Go somewhere</a>
                    </div>
                  </div>
                </div>
              <% end %>
            </h4>
        </div>
        <div class="tab-pane fade" id="events">
            <h4 class="mt-2">
              <% @booked_events.each do |b|%>
                <p><%= b.event_id%></p>
              <% end %>
            </h4>
        </div>
        <div class="tab-pane fade" id="following">
            <h4 class="mt-2">
              <% @following.each do |f|%>
                <p><%= f.friend_id%></p>
              <% end %>
            </h4>
        </div>
    </div>
  </div>
</div>

