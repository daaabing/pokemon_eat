<p id="notice"><%= notice %></p>
<h1>
  User  Profile
</h1>
<p>
  <div class="col-lg-12 col-form-label col-form-label-lg padding weight">Email:</div>
  <div class="col-lg-12 col-form-label col-form-label-lg padding">
    <%= @user.email %>
  </div>
</p>

<p>
  <div class="col-lg-12 col-form-label col-form-label-lg padding weight">Confirmed:</div>
  <div class="col-lg-12 col-form-label col-form-label-lg padding">
    <div>
      Email confirmed!
    </div>
    <%= @user.confirmed %>
  </div>
</p>

<p>
  <div class="col-lg-12 col-form-label col-form-label-lg padding weight">Food preference:</div>
  <div class="col-lg-12 col-form-label col-form-label-lg padding">
  <%= @user.food_preference  %>
  <%= @user.food_preference %>
  </div>
</p>


<div>
  <strong class = 'reminder class="col-lg-12 col-form-label col-form-label-lg padding"'>
    Wanna search something? Click <%= link_to 'here', '/search/' + params[:id].to_s%>
  </strong>
</div>
<div>
  <strong class = 'reminder class="col-lg-12 col-form-label col-form-label-lg padding"'>
    <%= link_to 'Log out', '/' %>
  </strong>
</div>


<style>
  .padding{
      padding-left: 0;
  }
  .reminder{
      margin-top: 10px;
      margin-bottom: 10px;
  }
  .weight{
      font-weight:bold;
  }
</style>