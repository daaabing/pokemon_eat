  <a class="navbar-brand" href="#" style="margin-left:5px; font-size:25px;">Pokemon Eat</a>
  <div style="width:60%; margin-left:20%;">
    <%= form_with(url: "/search/" + params[:id].to_s, method: :get, local: true) do |form| %>
