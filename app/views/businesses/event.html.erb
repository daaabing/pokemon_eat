<div class="container" >
  <h1>
    Event Details
  </h1>

  <div class="row justify-content-evenly">
    <div class="col-lg-12 col-form-label col-form-label-lg padding weight">Image:</div>
    <div class="col-lg-12 col-form-label col-form-label-lg padding">
      <img src=<%= @event["image_url"]%> style="width:200px;">
    </div>
  </div>

  <div class="row justify-content-evenly">
    <div class="col-lg-12 col-form-label col-form-label-lg padding weight">Name:</div>
    <div class="col-lg-12 col-form-label col-form-label-lg padding">
      <p><%= @event["name"]%></p>
    </div>
  </div>

  <div class="row justify-content-evenly">
    <div class="col-lg-12 col-form-label col-form-label-lg padding weight">Free:</div>
    <div class="col-lg-12 col-form-label col-form-label-lg padding">
      <p><%= @event["is_free"]%></p>
    </div>
  </div>

  <div class="row justify-content-evenly">
    <div class="col-lg-12 col-form-label col-form-label-lg padding weight">Category:</div>
    <div class="col-lg-12 col-form-label col-form-label-lg padding">
      <p><%= @event["category"]%></p>
    </div>
  </div>

  <div class="row justify-content-evenly">
    <div class="col-lg-12 col-form-label col-form-label-lg padding weight">Description:</div>
    <div class="col-lg-12 col-form-label col-form-label-lg padding">
      <p><%= @event["description"]%></p>
    </div>
  </div>

  <div class="row justify-content-evenly">
    <div class="col-lg-12 col-form-label col-form-label-lg padding weight">Location:</div>
    <div class="col-lg-12 col-form-label col-form-label-lg padding">
      <p><%= @event["display_address"]%></p>
    </div>
  </div>

  <div class="row justify-content-evenly">
    <div class="col-lg-12 col-form-label col-form-label-lg padding weight">Visit Site:</div>
    <div class="col-lg-12 col-form-label col-form-label-lg padding">
      <p><%= link_to "click here", @event["event_site_url"]%></p>
    </div>
  </div>

  <div class="row justify-content-evenly">
    <button type="button" class="btn btn-primary" style="margin-left:10px;">
      <%= link_to "Back to home page", "/home"%>
    </button> 
  </div>

</div>




