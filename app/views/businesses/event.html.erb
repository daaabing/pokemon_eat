<nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
  <%= image_tag("superball.png", width:'80px') %>
  <a class="navbar-brand" href="/home" style="margin-left:5px; font-size:25px;">Pokemon Eat</a>
  <div style="width:60%; margin-left:20%;">
    <%= form_with(url: "/search/" + params[:id].to_s, method: :get, local: true) do |form| %>
      <div style="display:inline;">
        <%= form.text_field :term, :id=>'search_term', :class=>"form-control", :style=>"display:inline; width:20%; border-radius:20px;", :placeholder=>"Find"%>
      </div>
      <div style="display:inline;">
        <%= form.text_field :location, :id => 'search_location', :class=>"form-control insert-location", :style=>"display:inline; width:30%; border-radius:20px;", :placeholder=>"Near"%>
      </div>
      <% if @search_error != nil%>
        <p><%= @search_error%></p>
      <% end%>
      <div style="display:inline;">
        <%= form.submit "Go" , :class=>"btn", :style=>"color:white; font-size:1.25rem;" %>
      </div>
    <% end %>
  </div>
  <div class="col-2 collapse navbar-collapse" id="navbarResponsive">
    <% if @user == nil %>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="/welcome">Sign Up</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/welcome">Log In</a>
        </li>
      </ul>
    <% else %>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="/user" style="font-size:1.25rem;">
            <img src=<%=@avatar_url%> style="width:65px; display:inline;">
          </a>
        </li>
      </ul>
    <% end %>
  </div>
</nav>



<div style="margin:0px; padding:0px; width:100%;">
  <div class="row" style="margin:0px; width:100%; height:550px; overflow:hidden; background-image: linear-gradient(to top, rgba(0,0,0,0.75), rgba(255,255,255,0)), url(<%= @event_background_url %>); background-size:cover; ">
    <div class="container" style="margin-top:200px; color:white;">
      <%= image_tag("candy.png", width:'80px') %>
      <h1><%= @event["name"]%></h1>
      <div style="margin-bottom:15px; display:flex; align-items: center;">
        <%= image_tag("mystic.png", width:'45px', style:'display:inline') %>
        <h3><%= @event["category"]%></h3>
      </div>
      <div style="margin-bottom:15px; display:flex; align-items: center;">
        <%= image_tag("egg.png", width:'45px', style:'display:inline; margin-right:0px;') %>
        <h3 style="display:inline; margin-left:5px; margin-bottom: 0px;">Already <%= @event["interested_count"]%> Interested</h3>
      </div>
      <div style="margin-bottom:15px; display:flex; align-items: center;">
        <%= image_tag("lucky-egg.png", width:'45px', style:'display:inline; margin-right:0px;') %>
        <h3 style="display:inline; margin-left:5px; margin-bottom: 0px;">Already <%= @event["attending_count"]%> Registered</h3>
      </div>
    </div>
  </div>
</div>


<div class="container" style="margin-top:20px;">
  <button type="button" href=<%= "/book/" + @event["id"].to_s%> class="btn btn-primary">Register Now</button>
  <div style="margin-top:5px; height:1px; border-top:solid #ACC0D8 1px;"></div>
</div>



<div class="container" style="margin-top:60px;">
  <h1>Quick Info</h1>
  <div style="height:1px; border-top: solid #ACC0D8 1px; margin-bottom:5px;"></div>
  <img src=<%= @event["image_url"]%> style="width:600px; max-height:400px; border-radius:5px; background-size:cover;">

  <div style="margin-top:30px; display:flex; align-items: center;">
    <%= image_tag("mystic-1.png", width:'45px', style:'display:inline') %>
    <h3 style="margin:0px; margin-left:10px; display:inline;">Location</h3>
  </div>
  <div style="margin-top:5px;">
    <h4 style="display:inline; margin-left:55px;"><%= @event["location"]["city"]%>  </h4>
    <h4 style="display:inline;"><%= @event["location"]["zip_code"]%>  </h4>
    <h4 style="display:inline;"><%= @event["location"]["state"]%> </h4>
  </div>

  <div style="margin-top:30px; display:flex; align-items: center;">
    <%= image_tag("clock.png", width:'45px', style:'display:inline') %>
    <h3 style="margin:0px; margin-left:10px;display:inline;">Time Slot</h3>
    <h4 style="margin:0px; margin-left:10px;display:inline;"><%= @event["time_start"][0,10]%> to <%= @event["time_end"][0,10]%></h4>
  </div>


  <div style="margin-top:30px; display:flex; align-items: center;">
    <%= image_tag("smartphone.png", width:'45px', style:'display:inline') %>
    <h3 style="margin:0px; margin-left:10px;display:inline;">Contact <%= @event["description"]%> </h3>
  </div>

  
</div>







<footer class="py-5" style="margin-top:100px; background-color:rgb(0,0,0,0.7)">
    <div class="container">
      <p class="m-0 text-center text-white small">Copyright &copy; Pokemon Eat 2021</p>
    </div>
</footer>

